{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/waitlistFormStyle.css">
{% endblock %}

{% block title %}
    S'inscrire - Numericall
{% endblock %}

{% block body %}
    {% if formValid is defined %}
        <div class="container">
            <div id="success" class="alert alert-success">
                <i class="far fa-check-circle fa-5x"></i><br>
                <p>Vous venez de vous inscrire à la lise d'attente un mail de comfimation va vous etre envoyé</p>
            </div>
        </div>
    {% else %}
    <div class="container">
            <h1 class="title">Inscription à la liste d'attente</h1>
        <div class="container" id="formContainer">
            <div class="row justify-content-around">  
                <div class=" col col-md-7">
                    {% form_theme formWaitList 'bootstrap_4_layout.html.twig' %}
                    {{ form(formWaitList) }} 
                </div>
                <div class="col col-md-4">
                    <div class="d-flex align-content-center flex-wrap">
                        <div class="p-2">
                            <img class="logo" src="/assets/img/NlCollapsed.png" alt="logo_numerical_collapsed">
                        </div>
                        <div class="p-2">
                            <img class="logo" src="/assets/img/Webforce3.png" alt="logo_webforce3">
                        </div>
                    </div>
                </div>
            </div>
            {% if mailExist is defined %}
                <div id="alertUser" class="alert alert-danger">
                    <i class="far fa-times-circle fa-5x "></i><br>
                    <p>L'adresse mail existe déjà dans notre base de donnée</p>
                </div>
            {% endif %}
            <p id="annotation">Le lieu de réunion peut parfois être différent du lieu de formation.</p>
        </div> 
    </div>
    {% endif %}
    
{% endblock %}

{% block javascripts %}
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
{% endblock %}
