{% extends "base-backoffice.html.twig" %}

{% block title %}
    Ajout d'un témoignage - Numericall
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/add-testimony/add-testimony-form.css">
{% endblock %}

{% block body %}
    {% if change is defined %}
        <div class="alert alert-success" role="alert">
            Témoignage ajouté<br>
        </div>
    {% elseif notchange is defined %}
        <h1 class="display-4"> Ajouter un témoignage </h1>

        {% form_theme formTestimony 'bootstrap_4_layout.html.twig' %}
        {{ form(formTestimony) }}
    {% endif %}
        {% endblock %}