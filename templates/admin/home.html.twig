{% extends "base-backoffice.html.twig" %}

{% block body %}
    Bienvenue {{ user }} dans la partie administration.
    <ul>
        <li>   <a href="{{ path('logout') }}">Deconnexion</a>
        </li>
        <li>    <a href="{{ path('change_password') }}">Changer mot de passe</a>
        </li>
        <li>    <a href="{{ path('change_email') }}">Changer email</a>
        </li>
        {% if is_granted('ROLE_SUPERADMIN') %}

            <li>    <a href="{{ path('create_user') }}">Creer un user</a>
            </li>
            <li>    <a href="{{ path('delete_user') }}">Supprimer un user</a>
            </li>
            <li>    <a href="{{ path('change_role') }}">Changer role user</a>
            </li>
        {% endif %}
    </ul>
    {{ app.user.username }}
{% endblock %}