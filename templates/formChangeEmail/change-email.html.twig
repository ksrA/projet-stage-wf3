{% extends "base-backoffice.html.twig" %}

{% block title %}
    Changer Email - Numericall
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/param-compte/change-email.css">
{% endblock %}

{% block body %}
{% if change is defined %}
    <div class="alert alert-success" role="alert">
        Adresse mail chang√©e !<br>
        Nouvelle adresse mail : {{ email }}
    </div>
{% elseif notchange is defined %}
        

    {% form_theme formChangeEmail 'bootstrap_4_layout.html.twig' %}

    {{ form(formChangeEmail) }}
    {% if inputError is defined %}
        {% for error in inputError %}
            <div class="alert alert-danger" role="alert">
                <p>{{ error }}</p>
            </div>
        {% endfor %}
    {% endif %}
{% endif %}
{% endblock %}
